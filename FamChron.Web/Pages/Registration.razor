@page "/registration"
@inherits RegistraionBASE

<h3>Registration</h3>


<EditForm Model="registrationUser" OnValidSubmit="Registration">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="row mb-3">
        <label for="Username">Username:</label>
        <InputText Name="Username" @bind-Value="registrationUser.Name" />
        <label for="Email">Emai:</label>
        <InputText Email =" E-mail" @bind-Value="registrationUser.Email" />
        <label for="Password">Password:</label>
        <InputText Password="Password" @bind-Value="registrationUser.Password" />
        <label for="Confirm password">Confirm password:</label>
        <InputText Confirm Password ="Confirm password" @bind-Value="registrationUser.ConfirmPassword" />
        <button type="submit">Let's move forward</button>
    </div>
</EditForm>
