@page "/events/eventdetails/{id:int}"
@using FamChron.Web.Pages
@inherits EventDetailsBASE


@if (anEvent == null && ErrorMessage == null)
{
    <h3>Loading your story's event...</h3>
}
else if (ErrorMessage != null)
{
    <h3 class="text-danger">Треш, конечно @ErrorMessage</h3>
}
else
{
    <h3 class="mb-5">Event Details</h3>
    <div class="row">
        <div class="col-md-6 mb-4">
            <img class="img-fluid" src="@anEvent.PreviewPhotoURL">
        </div>
        <div class="col-md-6">
            <h3>@anEvent.EventName</h3>
            <p class="mb-4">@anEvent.Description</p>
            <p class="mb-4">
                <b>
                    @anEvent.dateTime.ToString("D")&nbsp;(@anEvent.StoryID)
                </b>
            </p>
        </div>
    </div>
}
