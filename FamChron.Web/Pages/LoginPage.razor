@page "/login"
@inherits LoginBase

<h3>LoginPage</h3>

<EditForm Model="formUser" OnValidSubmit="Login">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="row mb-3">
        <label for="Username">Username:</label>
        <InputText Name="Username" @bind-Value="formUser.Name" />
        <label for="Password">Password:</label>
        <InputText Password="Password" @bind-Value="formUser.Password" />
        <button type="submit">Let's move forward</button>
    </div>
</EditForm>

<a href="/registration">Sign Up</a>
